extends ../layout

block content
	h1.
		Article ID #{article._id}
	form(action='/articles/#{article._id}/edit',method='post',name='updatearticle',enctype='application/x-www-form-urlencoded')
		p Name:
			input#inputName(type='text', value='#{article.name}', name='name')
		p Article:
			input#inputBody(type='text', value='#{article.body}', name='body')
		p DOB:
			input#inputPublished(type='date', value='#{articlepublished}', name='published')
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update
